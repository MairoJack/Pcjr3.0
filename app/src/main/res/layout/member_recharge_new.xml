<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="#FD6703">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="账户余额"
                    android:textColor="#FFDACA"
                    android:textSize="@dimen/text_size_18sp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_balance_prefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textColor="#FFFFFF"
                        tools:text="9866775757."
                        android:textSize="@dimen/text_size_24sp"/>

                    <TextView
                        android:id="@+id/txt_balance_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/text_size_16sp"
                        tools:text="00元"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@color/color_content_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="充值金额"
                        android:textColor="#909090"
                        android:textSize="@dimen/text_size_16sp"/>

                    <ImageView
                        android:id="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_tanhao"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="¥"
                        android:textSize="30dp"
                        android:textColor="#000000"/>

                    <EditText
                        android:id="@+id/txt_amount"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="bottom"
                        tools:hint="984656464"
                        android:inputType="numberDecimal"
                        android:textColorHint="#000000"
                        android:textSize="26dp"
                        android:background="@null"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:orientation="vertical"
                android:background="@color/color_content_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_bank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/icon_bank_100"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="9">

                        <TextView
                            android:id="@+id/bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#595959"
                            tools:text="中国工商银行"
                            android:textSize="@dimen/text_size_16sp"/>

                        <TextView
                            android:id="@+id/txt_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:textColor="#A9A9A9"
                            android:textSize="@dimen/text_size_14sp"
                            tools:text="单笔限额5万，单日限额5万"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/txt_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#595959"
                            android:textSize="@dimen/text_size_16sp"
                            tools:text="尾号0188"/>

                        <TextView
                            android:id="@+id/txt_realname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:gravity="right"
                            android:textColor="#A9A9A9"
                            android:textSize="@dimen/text_size_16sp"
                            tools:text="祝悠悠"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp"
                    android:background="#F1F1F2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/verify"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="@dimen/text_size_16sp"
                        android:text="验证码"/>

                    <EditText
                        android:id="@+id/txt_verify"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@null"
                        android:hint="预留手机号152****0659"
                        android:inputType="number"
                        android:textColorHint="#C2CDD2"
                        android:textSize="@dimen/text_size_16sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:gravity="right">

                        <Button
                            android:id="@+id/btn_verify"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_primary"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="发送验证码"
                            android:textColor="#FFFAFF" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <CheckBox
                    android:id="@+id/agree"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:checked="true"
                    android:text=" 同意"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/service_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《一键支付服务协议》"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_16sp" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btn_disable"
                android:enabled="false"
                android:text="确认充值"
                android:textColor="@color/color_content_background"
                android:textSize="@dimen/text_size_18sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>