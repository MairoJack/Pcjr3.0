<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_background"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_yes"/>

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/text_size_14sp"
            tools:text="2016-05-10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/bgColor_divier"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_corner_white">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    tools:text="第1期"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/color_text"/>

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    tools:text="已回款"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/cube_holo_green_dark"/>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_list_divider"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp">

                <TextView
                    android:id="@+id/txt_estimated_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="85490.91"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/text_size_title"
                    android:textColor="@color/color_text"/>

                <TextView
                    android:id="@+id/txt_actual_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="85490.91"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_title"
                    android:textColor="@color/color_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="应回金额（元）"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="实回金额（元）"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>